{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types", "./src/types", "./src/types/express"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@types/*": ["src/types/*"],
        "@express/*": ["src/types/express/*"]
      },
    },
    "include": ["src", "src/types", "src/types/express"], 
  }
  